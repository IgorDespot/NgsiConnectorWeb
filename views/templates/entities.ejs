<form  method="POST" action="/entities">
	<!-- COMPONENT START -->
	<div class="form-group">
		<label for="">Fiware-Service</label>
		<div class="input-group input-file" name="Fichier1">
			<input id="fiwareService" name="fiwareService" type="text" class="form-control test2" placeholder='Enter Fiware-Service...'  />
		</div>
	</div>
	<div class="form-group">
		<label for="">Fiware-Service-Path</label>
		<div class="input-group input-file" name="Fichier1">
			<input id="fiwareServicePath" name="fiwareServicePath" type="text" class="form-control test2" value=<%= data %>  />
		</div>
	</div>
	<div class="form-group">
		<label for="">Entities amount</label>
		<div class="input-group input-file" name="Fichier1">
			<input id="entitiesAmount" name="entitiesAmount" type="text" class="form-control test2" placeholder="Enter desired amount entities for response..."/>
		</div>
		<p class="text-info">If no value is specified default amount of 20 will be returned.</p>
	</div>
	<div class="form-group">
		<label for="">Access-Token</label>
		<div class="input-group input-file" name="Fichier1">
				<%if (typeof token != 'undefined') { %>
					<input id="accessToken" name="accessToken" type="text" class="form-control test2" placeholder='Enter Access-Token...'  value=<%= token %> />
				<% } else { %>
					<input id="accessToken" name="accessToken" type="text" class="form-control test2" placeholder='Enter Access-Token...' />
				<% } %>
		</div>
	</div>
	<!-- COMPONENT END -->
	<div class="form-group">
		<button id="main" type="submit" class="btn btn-primary pull-right">List Entities</button>
		<button  class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
				Get Access Token
			</button>
	</div>
	<div class="collapse" id="collapseExample">
			<div class="card card-body">
				<form autocomplete="off" method="POST" action="/token">
						<div class="form-group">
								<label for="">Email</label>
								<div class="input-group input-file" name="Fichier1">
									<input autocomplete="off" name="username" type="text" class="form-control" placeholder='Enter email used on Fiware IDM portal...' />
								</div>
							</div>
							<div class="form-group">
								<label for="">Password</label>
								<div class="input-group input-file" name="Fichier1">
									<input autocomplete="off" name="password" type="password" class="form-control" placeholder='Enter password used on Fiware IDM portal...' />
								</div>
							</div>
							<div class="form-group">
									<button id="mainus" type="submit" class="btn btn-primary pull-right">Send</button>
								</div>
				</form>
			</div>
		</div>
		<%if (typeof msg != 'undefined') { %>
			<div class="alert alert-warning"  id="success-alert" role="alert">
				<strong>Error!</strong> <%= msg %>
		</div>
		<% } %>
	<!-- <p class="text-center text-white bg-success">
		<%= typeof succ != 'undefined' ? succ : '' %>
	</p> -->
</form>
